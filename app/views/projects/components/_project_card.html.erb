<%# render 'projects/components/project_card', project: project %>
<li>
  <%= link_to project_path(project), class: "w-full mb-4 cursor-pointer" do %>
    <div class="overflow-hidden rounded-[24px] mb-4 flex flex-col h-[300px] w-full relative justify-center">
      <%= cl_image_tag project.avatar.key,
      alt: project.title,
      class:"w-full object-cover object-center transition-all duration-400 ease-in-out hover:scale-110" %>
    </div>
    <div class="flex flex-col gap-2">
      <h3 class="uppercase text-xl font-semibold">
        <%= project.title %>
      </h3>
      <p class="uppercase text-[#757575] font-medium">nom de l'entreprise</p>
    </div>
  <% end %>
</li>
