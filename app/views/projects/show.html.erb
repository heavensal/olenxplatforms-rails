
<main class="container mx-auto min-h-screen">

  <h1 class="font-bold text-4xl text-center my-8">
    <%= @project.title %>
  </h1>


  <section class="grid grid-cols-2 gap-4">
    <div class="flex items-center">
      <p>
        <%= @project.description %>
      </p>
    </div>

    <div>
      <% if @project.avatar.attached? %>
        <%= cl_image_tag @project.avatar.key, width: 300, height: 300, class: "rounded-lg shadow-md" %>
      <% end %>
    </div>
  </section>

</main>
