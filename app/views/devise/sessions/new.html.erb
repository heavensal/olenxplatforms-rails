<main class="p-4 flex flex-col gap-8">
  <h1 class="uppercase font-bold leading-[1.2] text-[2.25rem]">Se connecter</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex flex-col gap-4' }) do |f| %>
    <div class="flex flex-col gap-2">
      <%= f.label :email,"E-mail" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-2 border border-[#333333] rounded-[5px] w-full focus:outline-none focus:ring-[#6c41b9] focus:ring-1", placeholder: 'Entrez votre mail'  %>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :password, "Mot de passe" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "p-2 border border-[#333333] rounded-[5px] w-full focus:outline-none focus:ring-[#6c41b9] focus:ring-1", placeholder: 'Mot de passe'  %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Se souvenir de moi" %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Se connecter", class: "w-max px-6 py-3 rounded-[24px] border border-black bg-white text-black transition-all duration-400 ease-in-out hover:bg-[#6c41b9] hover:text-white hover:border-[#6c41b9] cursor-pointer"%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</main>
