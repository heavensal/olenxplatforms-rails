<div>
  <h1 class="font-bold text-4xl">Modifier mon Portfolio</h1>
  <p>Find me in app/views/dashboard/portfolios/edit.html.erb</p>

  <div>
    <%= form_with(model: @portfolio), url: dashboard_portfolio_path, method: :patch do |form| %>
      <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>

      <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div>
        <%= form.label :avatar %>
        <%= form.file_field :avatar %>
      </div>

      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
