<h2>
  <%= link_to 'Modifier Mon Portfolio', edit_dashboard_portfolio_path %>
</h2>

<h2>
  <%= link_to 'Ajouter un Projet', new_dashboard_portfolio_project_path %>
</h2>

<div class="container mx-auto px-4 max-w-3xl">
  <!-- Informations du portfolio -->
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="font-bold text-4xl text-gray-800 mb-4">
      <%= @portfolio.company_name %>
    </h1>

    <p class="text-gray-600 text-lg">
      <%= @portfolio.description %>
    </p>

    <!-- QR Code et Avatar -->
    <div class="mt-6 grid grid-cols-2 gap-4">
      <% if @portfolio.qr_code.attached? %>
        <div class="flex justify-center">
          <%= cl_image_tag @portfolio.qr_code.key, width: 300, height: 300, class: "rounded-lg shadow-md" %>
        </div>
      <% end %>

      <% if @portfolio.avatar.attached? %>
        <div class="flex justify-center">
          <%= cl_image_tag @portfolio.avatar.key, width: 300, height: 300, class: "rounded-lg shadow-md" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Section Réalisations -->
  <div class="mt-8 bg-white shadow-md rounded-lg p-6">
    <h2 class="font-bold text-2xl text-gray-800 mb-4">
      Mes Réalisations
    </h2>

    <% if @portfolio.projects.any? %>
      <ul class="space-y-3">
        <% @portfolio.projects.each do |project| %>
          <li class="bg-gray-100 hover:bg-gray-200 transition p-3 rounded-lg">
            <%= link_to project.title, dashboard_portfolio_project_path(project), class: "text-blue-600 font-medium" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">Vous n'avez pas encore inséré vos réalisations.</p>
    <% end %>
  </div>

  <!-- Section Idées de projets -->
  <div class="mt-8 bg-white shadow-md rounded-lg p-6">
    <h2 class="font-bold text-2xl text-gray-800 mb-4">
      Mes Idées de projets
    </h2>

    <% if @portfolio.ideas.any? %>
      <ul class="space-y-3">
        <% @portfolio.ideas.each do |idea| %>
          <li class="bg-gray-100 hover:bg-gray-200 transition p-3 rounded-lg">
            <%= link_to idea.title, dashboard_portfolio_idea_path(idea), class: "text-blue-600 font-medium" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">Vous n'avez pas encore d'idées de projet.</p>
    <% end %>
  </div>
</div>


<%= link_to 'Retour', root_path %>
