<main class="max-w-[97dvw] min-h-screen mx-auto">
  <section id="hero-portfolio" class="grid grid-cols-[80%_20%] md:grid-cols-[90%_10%] items-center border-b-2 border-[var(--tag-color)] px-[20px] pt-0 pb-[50px]">
    <div class="flex gap-4 items-center">
      <%= cl_image_tag @portfolio.avatar.key, width: 50, height: 50, class: "rounded-lg shadow-md" %>
      <div class="">
        <h1 class="font-semibold text-2xl ">
          <%= @portfolio.company_name %>
        </h1>
        <p class="text-[var(--tag-color)]">
          <%= @portfolio.description %>
        </p>
      </div>
    </div>
    <div class="flex justify-center">
      <%= cl_image_tag @portfolio.qr_code.key, width: 50, height: 50, class: "rounded-lg shadow-md" %>
    </div>
  </section>
  <section id="projects" class="my-8">
    <h2 class="font-semibold text-2xl mb-4">
      Projets
    </h2>
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      <% @portfolio.projects.each do |project| %>
        <%= render 'projects/components/project_card', project: project %>
      <% end %>
    </ul>
  </section>
  <section id="ideas" class="mt-8">
    <h2 class="font-semibold text-2xl mb-4">
      Id√©es
    </h2>
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      <% @portfolio.ideas.each do |idea| %>
        <%= render 'ideas/components/idea_card', idea: idea %>
      <% end %>
    </ul>
  </section>
</main>
