<main class="container mx-auto min-h-screen my-8">
  <section id="hero-portfolio">
    <h1 class="font-medium text-4xl">
      <%= @portfolio.company_name %>
    </h1>
    <p>
      <%= @portfolio.description %>
    </p>
    <div class="grid grid-cols-2">
      <div class="flex justify-center">
        <%= cl_image_tag @portfolio.avatar.key, width: 100, height: 100, class: "rounded-lg shadow-md" %>
      </div>
      <div class="flex justify-center">
        <%= cl_image_tag @portfolio.qr_code.key, width: 100, height: 100, class: "rounded-lg shadow-md" %>
      </div>
    </div>
  </section>
  <section id="projects" class="my-8">
    <h2 class="text-xl font-medium">
      Projets
    </h2>
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      <% @portfolio.projects.each do |project| %>
        <%= render 'projects/components/project_card', project: project %>
      <% end %>
    </ul>
  </section>
  <section id="ideas" class="mt-8">
    <h2 class="text-xl font-medium">
      Id√©es
    </h2>
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      <% @portfolio.ideas.each do |idea| %>
        <%= render 'ideas/components/idea_card', idea: idea %>
      <% end %>
    </ul>
  </section>
</main>
