<%# render 'portfolios/components/portfolio_card', portfolio: portfolio %>

<li class="hover:!opacity-100 transition hover:duration-150">
  <%= link_to portfolio_path(portfolio), class: "block" do %>
    <%= cl_image_tag portfolio.avatar.key,
      alt: portfolio.company_name,
      class: "w-full h-60 object-cover transition-all duration-300" %>

    <h3 class="flex items-center justify-center text-white text-xl">
      <%= portfolio.company_name %>
    </h3>
  <% end %>
</li>
