<%# render 'portfolios/components/portfolio_card', portfolio: portfolio %>

<li>
  <%= link_to portfolio_path(portfolio), class: "relative block group overflow-hidden rounded-2xl shadow-lg" do %>
    <%= cl_image_tag portfolio.avatar.key,
      alt: portfolio.company_name,
      class: "w-full h-60 object-cover transition-all duration-300 group-hover:brightness-50" %>

    <h3 class="absolute inset-0 flex items-center justify-center text-white text-xl font-semibold opacity-0 transition-all duration-300 group-hover:opacity-100">
      <%= portfolio.company_name %>
    </h3>
  <% end %>
</li>
